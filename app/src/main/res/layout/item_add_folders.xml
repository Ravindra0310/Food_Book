<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    app:cardCornerRadius="@dimen/_10sdp"
    android:elevation="@dimen/_10sdp">

    <RelativeLayout
        android:id="@+id/layout_food_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivImage"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_margin="@dimen/_5sdp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tvNameWhoIsUploading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_toEndOf="@id/ivImage"
            android:layout_toRightOf="@id/ivImage"
            android:textColor="@color/black"
            android:text="Name"
            android:textSize="@dimen/_15sdp" />

        <TextView
            android:id="@+id/tvAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvNameWhoIsUploading"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_toEndOf="@id/ivImage"
            android:layout_toRightOf="@id/ivImage"
            android:text="address"
            android:textSize="@dimen/_10sdp" />

        <TextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvAddress"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_toEndOf="@id/ivImage"
            android:layout_toRightOf="@id/ivImage"
            android:text="time"
            android:textSize="@dimen/_10sdp" />

        <TextView
            android:id="@+id/tvType"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivImage"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="Type"
            android:textStyle="bold|italic"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:layout_toEndOf="@id/tvType"
            android:layout_marginStart="@dimen/_5sdp"
            android:id="@+id/tvTypeOfFood"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivImage"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="type of food"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/tvAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivImage"
            android:textColor="@color/black"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:text="100"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/tvAmountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivImage"
            android:layout_toStartOf="@id/tvAmount"
            android:layout_marginTop="@dimen/_5sdp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginRight="@dimen/_5sdp"
            android:text="Price "
            android:textSize="@dimen/_12sdp" />


        <TextView
            android:id="@+id/tvContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvType"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:textColor="@color/black"
            android:layout_marginBottom="@dimen/_5sdp"
            android:text="Details about food"
            android:textSize="@dimen/_12sdp" />


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_300sdp"
            app:cardCornerRadius="8dp"
            android:layout_below="@+id/tvContent"
            android:layout_marginTop="5dp"
            android:elevation="10dp">

            <ImageView
                android:id="@+id/ivFoodImage"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_300sdp"
                android:scaleType="center"
                android:src="@drawable/ic_launcher_background" />

        </androidx.cardview.widget.CardView>




    </RelativeLayout>
</androidx.cardview.widget.CardView>
